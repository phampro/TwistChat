<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_black">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="60dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true">

        <com.hoangsong.zumechat.view.CustomTextView
            android:id="@+id/text_suspended_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customTypeface="@string/font_light"
            android:layout_gravity="center_horizontal"
            android:text="string/title_account_suspended"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <com.hoangsong.zumechat.view.CustomTextView
            android:id="@+id/text_suspended_messgae_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customTypeface="@string/font_light"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0dp"
            android:text="string/lbl_account_suspended_message_line1"
            android:textColor="@android:color/white"
            android:layout_marginTop="7dp"
            android:textSize="14sp" />
        <com.hoangsong.zumechat.view.CustomTextView
            android:id="@+id/text_suspended_messgae_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customTypeface="@string/font_light"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0dp"
            android:text="string/lbl_account_suspended_message_line2"
            android:textColor="@android:color/white"
            android:layout_marginTop="7dp"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>